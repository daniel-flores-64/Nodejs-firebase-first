<%- include("partials/_header.ejs") %>
<%- include("partials/_navbar.ejs") %>
<div class="container">
  <div class="row breadCrumbHeader text-light mt-5">
    <div class="col">
      <h1 class="text-center py-5">INDEX</h1>
    </div>
  </div>
  <div class="container d-flex justify-content-center mt-5">
    <div class="col-12 mainAppContainer">
      <table class="table table-striped table-dark">
        <tr>
          <th>Name</th>
          <th>Mobile</th>
          <th>Email</th>
          <th>Action</th>
        </tr>
        <% data.forEach(doc => { %>
        <tr>
          <td><%= doc.name %></td>
          <td><%= doc.mobile %></td>
          <td><%= doc.email %></td>
          <td>
            <div class="d-grid gap-2 col-12 mx-auto pe-3">
              <a class="btn btn-light" href="/tasks/<%= doc.id %>">Task List</a>
              <a class="btn btn-warning" href="/edit/<%= doc.id %>">Edit User</a>
              <a class="btn btn-danger" href="/delete/<%= doc.id %>">Delete User</a>
            </div>
          </td>
        </tr>
        <% }); %>
      </table>
    </div>
  </div>
  <div class="row w-25 mx-auto my-5">
    <a class="btn btn-primary w-100 p-3 text-uppercase fw-bold" href="/add-user">Add New User</a>
    <a class="btn btn-secondary w-100 p-3 text-uppercase fw-bold mt-3" href="/add-task">Add New Task</a>
  </div>
</div>

<!-- Bootstrap JS - CDN -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>

</html>